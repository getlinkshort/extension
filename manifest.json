{
    "manifest_version": 3,
    "name": "LinkShort",
    "description": "LinkShort Browser Extension will shorten the current link using LinkShort.",
    "version": "1.0",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png",
        "256": "icon256.png"
    },
    "host_permissions": ["https://rdr.fyi/*"],
    "permissions": [
        "activeTab"
    ]
}
